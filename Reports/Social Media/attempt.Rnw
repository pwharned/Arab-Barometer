age_categories <- function(age) {
  ifelse(age <= 29, "18 to 29",
         ifelse(age <= 39, "30 to 39",
                ifelse(
                  age <= 49, "40 to 49",
                  ifelse(age <= 59, "50 to 59",
                         "60+")
                )))
}

op_dist <- function(dataframe) {
  output <- dataframe %>%
  group_by(question) %>%
  summarize(Percent = weighted.mean(response, wt)*100)
  return(output)
}

op_country <- function(dataframe) {
  output <- dataframe %>%
  group_by(question, country) %>%
  summarize(Percent = weighted.mean(response, wt)*100)
  return(output)
}
@

